<% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>error
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>
      <div class="col-xs-3">
      <h2>User info</h2>
      <div class="profile-container">
          <%= attachment_image_tag user, :image, :fill, 100, 100, fallback: 'no_image.jpeg' %>

    </div>
      <table class="table">
          <tr></tr>
          <tr>
            <th>name</th><th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th><th><%= user.body %></th>
          </tr>
      </table>
      <div class="row">
        <%= link_to "",edit_user_path(user.id),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_2391 edit_user_#{user.id}" %>
      </div>
      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
        <div class="field row " >  <!--後で変更-->
          <p><%= f.label :title %></p>
          <p><%= f.text_field :title, class: "col-xs-12 book_title " %></p>
        </div>
        <div class="field row">
          <p><%= f.label :Opinion %></p>
          <p><%= f.text_area :body, class: "col-xs-12 book_body" %></p>
        </div>
        <div class="actions row ">
          <p><%= f.submit  'Create Book', :class=>"btn btn-primary col-xs-12" %></p>
        </div>
      <% end %>
    </div>