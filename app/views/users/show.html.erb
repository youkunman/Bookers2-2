



<p id="notice"><%= notice %></p>
<div class="container">
   <p id="notice"></p>
  <div class="row">
    <%= render 'users/list', user: current_user %>
    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
      	  <% @books.each do |book| %>
            <tr>
              <td><span><%= link_to user_path(@user), class: "user_#{@user.id}" do %>
                  <%= attachment_image_tag @user, :image, :fill, 100, 100, fallback: 'no_image.jpeg', :size => '50x50' %>
                <% end %></span></td>
              <td><span><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></span></td>
              <td><span><%= book.body %></span></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>




