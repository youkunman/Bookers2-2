<div class="container">
 <p id="notice"></p>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
     <h1>Editing Book</h1>
       <% if @book.errors.any? %>
         <div id="error_explanation" class="alert alert-danger">
           <ul>error
             <% @book.errors.full_messages.each do |message| %>
               <li><%= message %></li>
             <% end %>
           </ul>
         </div>
       <% end %>
       <%= form_for(@book) do |f| %>
        <div class="field row">
         <p><label for="book_title">Title</label></p>
         <p><%= f.text_field :title, class: "col-xs-12 book_title book_title" %></p>
        </div>
        <div class="field row">
         <p><label for="book_opinion">Opinion</label></p>
         <p><%= f.text_area :body, class: "col-xs-12 book_body book_body" %></p>
        </div>
        <div class="actions row">
         <p><%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %></p>
        </div>
       <% end %>
        <%= link_to "show",book_path(@book.id), class: "book_#{@book.id}" %>
        |
        <a class="back" href="/books">Back</a>
    </div>
  </div>
    <footer>
      <div class="container">
　       <div class="col-xs-3 col-xs-offset-9">
　        <p>CopyRight Infratop.inc</p>
         </div>
      </div>
    </footer>
</div>
